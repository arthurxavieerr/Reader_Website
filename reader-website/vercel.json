{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/auth/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/books/(.*)",
      "dest": "/books/$1",
      "headers": {
        "Cache-Control": "public, max-age=0"
      }
    },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}