# ==================================
# BETA READER GO - BACKEND CONFIG
# ==================================

# Ambiente de execução
NODE_ENV=development

# Porta do servidor
PORT=3001

# URL do banco de dados PostgreSQL
# Exemplo local: postgresql://username:password@localhost:5432/beta_reader_db
DATABASE_URL="postgresql://username:password@localhost:5432/beta_reader_db"

# Chaves de segurança JWT
JWT_SECRET="sua-chave-super-secreta-aqui-mude-em-producao"
JWT_REFRESH_SECRET="sua-chave-refresh-super-secreta"

# Configurações do plano
PREMIUM_PRICE=2990  # R$ 29,90 em centavos
FREE_BALANCE_LIMIT=1500  # R$ 15,00 em centavos (trava do free)
FREE_MIN_WITHDRAWAL=5000  # R$ 50,00 em centavos
PREMIUM_MIN_WITHDRAWAL=1500  # R$ 15,00 em centavos

# URLs do frontend (para CORS)
FRONTEND_URL=http://localhost:5173

# Configurações de rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100  # máximo 100 requests por janela

# Logs
LOG_LEVEL=info

# ==================================
# INTEGRAÇÕES EXTERNAS (Fase 10)
# ==================================

# Cloudinary (para upload de imagens)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Mercado Pago (para PIX)
MERCADO_PAGO_ACCESS_TOKEN=""
MERCADO_PAGO_PUBLIC_KEY=""

# SendGrid (para emails)
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL=""

# Redis (para cache - opcional)
REDIS_URL=""